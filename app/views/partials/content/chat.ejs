<div class="maincontent chat">

  <article class="chat">

      <div class="row">
        <div class="col-sm-12">

          <header class="chat-header">
            <div class="h3 chat-title">Roux Chat
              <small class="chat-status pull-right"><strong>Status</strong>:
                <span class="chat-status-message label label-default">loading...</span>
              </small>
            </div>
          </header>

          <div class="form-horizontal chat-form">

              <div class="form-group">
                <label for="chat-username" class="col-sm-2 control-label">Name</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="chat-username" placeholder="Enter your name">
                </div>
              </div>

            <div class="form-group">
                <label for="chat-message" class="col-sm-2 control-label">Message</label>
                <div class="col-sm-10">
                  <input type="text" placeholder="Enter a message, then press enter"  class="form-control" id="chat-message" rows="2" autocomplete="off">
                </div>
            </div>
          </form>

          <div class="panel panel-default ">
            <div class="panel-body chat-display">
              <p class="text-muted chat-text">Welcome...add your message using the form above</p>
            </div>
          </div>
        </div><!-- form-horizontal -->
      </div> <!-- col-sm-12 -->

  </article><!-- article -->

</div>
